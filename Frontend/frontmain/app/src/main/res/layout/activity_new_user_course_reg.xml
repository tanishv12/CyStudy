<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/olive"
    tools:context=".NewUserCourseRegActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/doneBtn"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="Done"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    app:cornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="1.15in"
                android:layout_margin="10dp"
                android:focusable="true">

                <ImageView
                    android:layout_width="0.9in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:elevation="3dp"
                    android:src="@drawable/mathimage"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1in"
                    android:layout_gravity="center"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gidugu"
                    android:text="MATH 166"
                    android:layout_marginStart="20dp">
                </TextView>

                <CheckBox
                    android:id="@+id/math166"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:clickable="true"
                    android:focusable="true">
                </CheckBox>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.15in"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="0.9in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:elevation="3dp"
                    android:src="@drawable/coms"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1in"
                    android:layout_gravity="center"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gidugu"
                    android:text="COM S 309"
                    android:layout_marginStart="20dp">
                </TextView>

                <CheckBox
                    android:id="@+id/coms309"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:scaleX="2"
                    android:scaleY="2">
                </CheckBox>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.15in"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="0.9in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:elevation="3dp"
                    android:src="@drawable/physicsiamge"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1in"
                    android:layout_gravity="center"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gidugu"
                    android:text="PHY 102"
                    android:layout_marginStart="20dp">
                </TextView>

                <CheckBox
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:scaleX="2"
                    android:scaleY="2">
                </CheckBox>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.15in"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="0.9in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:elevation="3dp"
                    android:src="@drawable/coms"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1in"
                    android:layout_gravity="center"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gidugu"
                    android:text="COM S 228"
                    android:layout_marginStart="20dp">
                </TextView>

                <CheckBox
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:scaleX="2"
                    android:scaleY="2">
                </CheckBox>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.15in"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="0.9in"
                    android:layout_height="1in"
                    android:layout_margin="10dp"
                    android:background="#404040"
                    android:elevation="3dp"
                    android:src="@drawable/chemimage"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1in"
                    android:layout_gravity="center"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gidugu"
                    android:text="CHEM 100"
                    android:layout_marginStart="20dp">
                </TextView>

                <CheckBox
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:scaleX="2"
                    android:scaleY="2">
                </CheckBox>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>